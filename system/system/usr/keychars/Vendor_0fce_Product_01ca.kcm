#
# Sony Bluetooth Keyboard(English-US)
# Model BKB50
#

type FULL

### ROW 1

key ESCAPE {
    base:                               fallback BACK
    alt, meta:                          fallback HOME
    ctrl:                               fallback MENU
}

# Non-printing key F1 FN:BRIGHTNESS_DOWN
# Non-printing key F2 FN:BRIGHTNESS_UP
# Non-printing key F3 FN:VOLUME_UP
# Non-printing key F4 FN:VOLUME_DOWN
# Non-printing key F5 FN:MEDIA_PREVIOUS
# Non-printing key F6 FN:MEDIA_PLAY_PAUSE
# Non-printing key F7 FN:MEDIA_NEXT
# Non-printing key F8 FN:CTRL+A
# Non-printing key F9 FN:CTRL+X
# Non-printing key F10 FN:CTRL+C
# Non-printing key F11 FN:CTRL+V
# Non-printing key F12 FN:SEARCH
# Non-printing key PROG_YELLOW
# Non-printing key SYSRQ
# Non-printing key POWER
# Non-printing key FORWARD_DEL

